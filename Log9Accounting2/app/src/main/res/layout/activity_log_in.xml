<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">

<ImageView
    android:id="@+id/imageLog9"
    android:layout_width="300dp"
    android:layout_height="90dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="51dp"
    android:src="@drawable/log9" />

<EditText
    android:id="@+id/et_empcode"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/imageLog9"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="37dp"
    android:ems="10"
    android:fontFamily="@font/magnificent"
    android:gravity="center"
    android:hint="Enter Employee Code"
    android:textColor="#000" />

<EditText
    android:id="@+id/et_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/et_empcode"
    android:layout_alignStart="@+id/et_empcode"
    android:layout_below="@+id/et_empcode"
    android:layout_marginTop="27dp"
    android:ems="10"
    android:fontFamily="@font/magnificent"
    android:inputType="textPassword"
    android:gravity="center"
    android:hint="Password"
    android:textColor="#000" />

<Button
    android:id="@+id/btn_login"
    style="@style/Widget.AppCompat.Button.Borderless"
    android:layout_width="306dp"
    android:layout_height="41dp"
    android:onClick="onLogIn"
    android:layout_alignLeft="@+id/imageLog9"
    android:layout_alignStart="@+id/imageLog9"
    android:layout_below="@+id/et_password"
    android:layout_marginTop="41dp"
    android:background="@drawable/mybutton"
    android:fadingEdge="horizontal|vertical"
    android:fontFamily="@font/magnificent"
    android:text="Login"
    android:textStyle="bold" />

</RelativeLayout>
